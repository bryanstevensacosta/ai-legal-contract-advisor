# LexConductor Environment Configuration
# IBM Dev Day AI Demystified Hackathon - Team AI Kings

# ============================================================================
# watsonx Orchestrate Configuration (REQUIRED)
# ============================================================================
WO_INSTANCE=https://your-instance.watson-orchestrate.ibm.com
WO_API_KEY=your_orchestrate_api_key_here

# ============================================================================
# watsonx.ai Configuration (REQUIRED)
# ============================================================================
WATSONX_API_KEY=your_ibm_cloud_api_key_here
WATSONX_PROJECT_ID=your_watsonx_project_id_here
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# Model Configuration
WATSONX_MODEL_ID=ibm/granite-3-8b-instruct
WATSONX_MAX_TOKENS=2000
WATSONX_TEMPERATURE=0.3

# ============================================================================
# IBM Cloudant Configuration (REQUIRED)
# ============================================================================
CLOUDANT_URL=https://your-account.cloudantnosqldb.appdomain.cloud
CLOUDANT_API_KEY=your_cloudant_api_key_here

# Database Names
CLOUDANT_DB_GOLDEN_CLAUSES=golden_clauses
CLOUDANT_DB_HISTORICAL_DECISIONS=historical_decisions
CLOUDANT_DB_REGULATORY_MAPPINGS=regulatory_mappings

# ============================================================================
# IBM Cloud Object Storage Configuration (REQUIRED)
# ============================================================================
COS_ENDPOINT=s3.jp-osa.cloud-object-storage.appdomain.cloud
COS_ACCESS_KEY_ID=your_cos_access_key_here
COS_SECRET_ACCESS_KEY=your_cos_secret_key_here
COS_BUCKET_NAME=watsonx-hackathon-regulations
COS_REGION=jp-osa

# ============================================================================
# External Agent Endpoints (Code Engine)
# ============================================================================
# These will be populated after deploying to Code Engine

FUSION_AGENT_ENDPOINT=https://fusion-agent.jp-osa.codeengine.appdomain.cloud
FUSION_AGENT_API_KEY=generate_random_secure_key_here

ROUTING_AGENT_ENDPOINT=https://routing-agent.jp-osa.codeengine.appdomain.cloud
ROUTING_AGENT_API_KEY=generate_random_secure_key_here

MEMORY_AGENT_ENDPOINT=https://memory-agent.jp-osa.codeengine.appdomain.cloud
MEMORY_AGENT_API_KEY=generate_random_secure_key_here

TRACEABILITY_AGENT_ENDPOINT=https://traceability-agent.jp-osa.codeengine.appdomain.cloud
TRACEABILITY_AGENT_API_KEY=generate_random_secure_key_here

# ============================================================================
# Application Configuration
# ============================================================================
# Environment
ENVIRONMENT=development  # development | staging | production

# Logging
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=json  # json | text

# Performance
REQUEST_TIMEOUT=30  # seconds
MAX_RETRIES=3
CACHE_TTL=3600  # seconds (1 hour)

# ============================================================================
# Security Configuration
# ============================================================================
# CORS (if using web frontend)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_DEBUG_MODE=false

# ============================================================================
# Hackathon Specific
# ============================================================================
HACKATHON_NAME=IBM Dev Day AI Demystified 2026
TEAM_NAME=AI Kings
PROJECT_NAME=LexConductor
SUBMISSION_DEADLINE=2026-02-01T10:00:00-05:00

# ============================================================================
# IMPORTANT SECURITY NOTES
# ============================================================================
# 1. NEVER commit this file with actual credentials to version control
# 2. Copy this file to .env and fill in your actual values
# 3. Ensure .env is in your .gitignore
# 4. Rotate all API keys regularly
# 5. Use different keys for development and production
# 6. Store production secrets in IBM Cloud Secrets Manager or similar
# ============================================================================

# ============================================================================
# Setup Instructions
# ============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in all values marked with "your_*_here"
# 3. Generate secure random keys for external agent API keys:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
# 4. Verify all services are accessible
# 5. Test configuration: python -c "from dotenv import load_dotenv; load_dotenv(); import os; print('OK' if os.getenv('WO_API_KEY') else 'MISSING')"
# ============================================================================
